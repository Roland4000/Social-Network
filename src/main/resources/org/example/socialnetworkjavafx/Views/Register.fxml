<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.socialnetworkjavafx.UIs.Controllers.RegisterController"
            prefHeight="400.0" prefWidth="600.0">
<GridPane alignment="center" hgap="10" vgap="10" style="-fx-padding: 300">
    <Label text="Username: " alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0"
    GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <Label text="Password: " alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="1"
           GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"
           GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    <Button fx:id="uploadButton" text="Upload Image" alignment="CENTER" onAction="#handleUploadImage"
            GridPane.columnIndex="0" GridPane.rowIndex="2"/>
</GridPane>
    <Label fx:id="photoPathLabel"/>
    <ImageView fx:id="ImageView" fitWidth="150" fitHeight="200" layoutX="400" layoutY="100"/>
    <Label text="Bio" layoutX="155" layoutY="410"/>
    <TextArea fx:id="bioArea" minWidth="500" minHeight="200" layoutX="150" layoutY="450" wrapText="true"/>
    <Button text="Register" onAction="#handleRegister" layoutX="700" layoutY="520"/>
</AnchorPane>
